    <!-- ! Include Header Partial -->
    <%-include("./partials/header",{title:"All Posts Page"})%>
    
    <main>
        <div class="post-banner">
            <img src="/images/profile-banner1.png" alt="post-banner">
        </div>

        <div class="content">
            <div class="card-container">
                <% if (allPosts.length <= 0){ %>
                    <h3 align="center">No Posts Found</h3>
                <% } else { %>
                    <% allPosts.forEach((post)=>{ %>
                        <div class="card">
                            <div class="card-image-container" >
                                <img class="card-image" src="<%=post.image%>" alt="post-image">
                                <span class="card-category"><%=post.category%></span>
                            </div>
                            <p class="card-owner-info">
                                <span><i class="fa-user fa-regular"></i><%=post.user.fullname%></span> 
                                <span><i class="fa-calendar-days fa-regular"></i><%=post.createdAt.toLocaleDateString()%></span>
                            </p>
                            <h3 class="card-title"><%=post.title%></h3>
                            <p class="card-content"><%=post.description.slice(0,200).concat("...")%></p>
                            <a href="/api/v1/post/<%=post._id%>" class="cont-read">Continue Reading...</a>
                        </div>
                   <% }) %>
                <% } %>

            </div>
        </div>
    </main>
        
    <!-- ! Include Footer Partial -->
    <%-include("./partials/footer")%>
