<%-include("./partials/header",{title:"Update User Details Page"})%>

<main class="register-main">
        <form action="/api/v1/user/updateuser?_method=PUT" method="post">
            <h2>Update Your Details</h2>
            <p class="error"><%=error%></p>
            <div class="form-fields">
                <div>
                    <label for="fullname">Fullname</label>
                    <input class="updatingPass" type="text" name="fullname" id="fullname" value="<%=user.fullname%>">
                </div>
                <div>
                    <label for="email">Email</label>
                    <input class="updatingPass" type="email" name="email" id="email" value="<%=user.email%>">
                </div>
            </div>
            <div align="center">
                <button class="update-btn" type="submit">Update Details</button>
            </div>
        </form>
</main>



<%-include("./partials/footer")%>