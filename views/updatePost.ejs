<%-include("./partials/header",{title:"Update Post Page"})%>

<main class="post-main">
        <form action="/api/v1/post/updatepost/<%=postFound._id%>?_method=put" enctype="multipart/form-data" method="post">
            <h2>Update Post</h2>
            <p align="center" class="error-message"><%=error%></p>
            <div class="form-fields">
                <div>
                    <label for="title">Title</label>
                    <input type="text" value="<%=postFound.title%>" name="title" id="title">
                </div>
                <div>
                    <label for="category">Category</label>
                    <input value="<%=postFound.category%>" type="text" list="myDataList" name="category" id="category">
                    <datalist id="myDataList">
                        <option value="React.js">React.js</option>
                        <option value="HTML">HTML</option>
                        <option value="CSS">CSS</option>
                        <option value="Node.js">Node.js</option>
                        <option value="Javascript">Javascript</option>
                        <option value="Others">Others</option>
                    </datalist>
                </div>
                <div>
                    <fieldset class="upload-profile-fieldset">
                        <legend>Select Post Image</legend>
                        <input type="file" name="file"id="myFile"/>
                    </fieldset>
                </div>
                <div>
                    <label for="description">Description</label>
                    <textarea name="description" id="description" cols="30" rows="10"><%-postFound.description%></textarea>
                </div>
            </div>
            <div align="center">
                <button class="update-btn" type="submit">Update Post</button>
            </div>
        </form>
</main>



<%-include("./partials/footer")%>